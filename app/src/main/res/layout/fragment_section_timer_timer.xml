<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.section.timer.TimerSection">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_text_minutes"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="minutes"
                android:inputType="number"
                android:maxLength="3" />

            <Button
                android:id="@+id/button_set_minutes"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:gravity="center"
                android:text="Set time" />

        </TableRow>

        <TextView
            android:id="@+id/textView_timer"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:gravity="center"
            android:text="00:00"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_select_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Task" />


        <Button
            android:id="@+id/button_start_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="START" />

        <Button
            android:id="@+id/button_reset_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESET"
            android:visibility="invisible"
            tools:visibility="visible"/>

        <CheckBox
            android:id="@+id/checkBox_detox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detox" />

    </LinearLayout>

    <!--
    <LinearLayout
        ///android:layout_width="match_parent"
        android:layout_height="429dp"
        android:orientation="horizontal">

    </LinearLayout>
    -->


</FrameLayout>
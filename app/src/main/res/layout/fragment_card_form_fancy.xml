<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/GiickosFancyCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#00FFFFFF"
    android:backgroundTint="#00B62929"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    tools:context=".ui.generic.form.FormCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:gravity="center|left"
        android:minHeight="65dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/statistics_frame_left"
            style="@style/GiickosFancyCard"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="0"
            android:paddingTop="5dp"
            app:cardCornerRadius="0dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4D000000">

            </FrameLayout>

            <ImageView
                android:id="@+id/statistics_settings_icon"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:scaleType="fitCenter" />

            <FrameLayout style="@style/BottomBorder">

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/statistics_frame_right"
            style="@style/GiickosFancyCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:minHeight="60dp"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:gravity="center"
                android:minHeight="65dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/statistics_settings_label"
                    android:layout_width="79dp"
                    android:layout_height="38dp"
                    android:layout_marginHorizontal="10dp"
                    android:autoSizeTextType="none"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:text="TextView" />

                <LinearLayout
                    android:id="@+id/statistics_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dummy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="TextView"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/click_dummy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="?attr/selectableItemBackground">

            </FrameLayout>

            <FrameLayout style="@style/BottomBorder">

            </FrameLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.cardview.widget.CardView>
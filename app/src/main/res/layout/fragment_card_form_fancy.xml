<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/GiickosInteractableCard"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="#00FFFFFF"
    android:backgroundTint="#00B62929"
    app:cardElevation="0dp"
    tools:context=".ui.generic.form.FormCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:gravity="center|left"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="0"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/statistics_frame_left"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:tintMode="add"
                app:srcCompat="@drawable/statistics_frame_right" />

            <ImageView
                android:id="@+id/statistics_settings_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/notification" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/statistics_frame_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/statistics_frame_left"
                android:tintMode="add" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/statistics_settings_label"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:text="TextView"
                    android:textColor="#FFFFFF" />

                <LinearLayout
                    android:id="@+id/statistics_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dummy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="TextView"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
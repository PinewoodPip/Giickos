<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    app:cardBackgroundColor="#00FFFFFF"
    app:cardElevation="0dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/team_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardElevation="0dp"
        app:contentPaddingBottom="5dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/cian_frame_button" />

        <TextView
            android:id="@+id/team_invitation_text"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:autoSizeTextType="uniform"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:text="Jiaqi has invited you to join to the Giickos team!"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="363dp"
            android:layout_height="122dp"
            android:layout_gravity="bottom|center"
            android:paddingHorizontal="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/team_decline_invitation"
                android:layout_width="265dp"
                android:layout_height="31dp"
                android:contentDescription="decline invitation"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.703"
                app:srcCompat="@drawable/red_button" />

            <ImageView
                android:id="@+id/team_accept_invitation"
                android:layout_width="265dp"
                android:layout_height="34dp"
                android:contentDescription="accept invitation"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2"
                app:srcCompat="@drawable/green_button" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="135dp"
                android:layout_height="31dp"
                android:gravity="center"
                android:text="@string/decline_label"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/team_decline_invitation"
                app:layout_constraintEnd_toEndOf="@+id/team_decline_invitation"
                app:layout_constraintStart_toStartOf="@+id/team_decline_invitation"
                app:layout_constraintTop_toTopOf="@+id/team_decline_invitation" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="99dp"
                android:layout_height="22dp"
                android:gravity="center"
                android:text="@string/accept_label"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/team_accept_invitation"
                app:layout_constraintEnd_toEndOf="@+id/team_accept_invitation"
                app:layout_constraintStart_toStartOf="@+id/team_accept_invitation"
                app:layout_constraintTop_toTopOf="@+id/team_accept_invitation" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>